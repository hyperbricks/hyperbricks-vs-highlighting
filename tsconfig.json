{
    "name": "hyperbricks",
    "main": "./extension.js",
    "engines": {
      "vscode": "^1.95.0"
    },
    "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node"]     
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
    "activationEvents": [
      "onLanguage:hyperbricks"
    ],
    "devDependencies": {
      "typescript": "^4.x",
      "vscode": "^1.x",
      "@types/vscode": "^1.x"
    }
  }
  